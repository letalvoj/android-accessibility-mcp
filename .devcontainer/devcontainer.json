{
	"name": "Android Dev (Stable)",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	"features": {
		// Java 17 is required for modern Android builds
		"ghcr.io/devcontainers/features/java:1": {
			"version": "17",
			"jdkDistro": "ms",
			"installGradle": true
		},
		// SWITCHED: This is the stable mobile-devcontainers source
		"ghcr.io/mobile-devcontainers/features/android:1": {
			"version": "latest",
			"cmdLineToolsVersion": "latest",
			"acceptSdkLicenses": true
		},
		// Node.js (Required for Gemini CLI)
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},
	// Installs Gemini CLI automatically after the container builds
	"postCreateCommand": "npm install -g @google/gemini-cli",

	"customizations": {
		"vscode": {
			"extensions": [
				"fwcd.kotlin",
				"vscjava.vscode-java-pack",
				"mathiasfrohlich.Kotlin"
			]
		}
	},
	// Port 5037 is vital for ADB (Android Debug Bridge)
	"forwardPorts": [5037, 8888],
	"remoteUser": "vscode",
	"containerEnv": {
		"_JAVA_OPTIONS": "-Xmx4g"
	}
}
